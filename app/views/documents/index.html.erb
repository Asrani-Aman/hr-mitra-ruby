<%# <h1>Radhe Krishna</h1> %>
<div class="col-lg-12">
<%= flash[:notice]%>
    <div class="card rounded-0 mt-5 mb-5">
        <div class="card-body">
            <h2 class="text-center">Listing Documents</h2>
        </div>
    </div>
    <%= link_to "Create New Document", new_document_path, class: "btn btn-primary"%>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name of Doc</th>
                <th>Doc-Type</th>
                <th>Employee</th>
                 <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @documents.each do |document| %>
                <tr>
                    <td><%= document.name %></td>
                    <td><%= document.doc_type %></td>
                    <td><%= link_to document.employee.name, employee_path(document.employee) %></td>
                    <td>
                        <%= link_to "Edit", edit_document_path(document), class: "btn btn-primary" %>
                        <%= link_to "Delete", document_path(document), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
                        <%= link_to "View", document_path(document),class: "btn btn-info" %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>