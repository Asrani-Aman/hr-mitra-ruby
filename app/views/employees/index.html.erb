<div class="col-lg-12">
<%= flash[:notice]%>
    <div class="card rounded-0 mt-5 mb-5">
        <div class="card-body">
            <h2 class="text-center">Listing Employees</h2>
        </div>
    </div>
    <%= link_to "Create New Employee", new_employee_path, class: "btn btn-primary"%>
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% @employees.each do |employee| %>
                <tr>
                    <td><%= employee.name %></td>
                    <td><%= employee.personal_email %></td>
                    <td><%= employee.full_address %></td>
                    <td>
                        <%= link_to "Edit", edit_employee_path(employee), class: "btn btn-primary" %>
                        <%= link_to "Delete", employee_path(employee), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
                        <%= link_to "View", employee_path(employee),class: "btn btn-info" %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>